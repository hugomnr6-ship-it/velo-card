{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/monday-update",
      "schedule": "0 6 * * 1"
    }
  ],
  "functions": {
    "src/app/api/cron/monday-update/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/strava/sync/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/health",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
